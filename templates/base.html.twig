<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}

		</title>
		<script defer src="{{ asset('js/script.js') }}"></script>
		{% block styleSheets %}

		<script src="https://kit.fontawesome.com/5c246c4e24.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="{{ asset('css/style.css') }}">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
		{% endblock %}

	</head>
  
	<body class="d-flex flex-column">
	{% for cat, list in app.flashes %}
            {% for message in list %}
                <div class="flash flash-{{ cat }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %} 
		{{ include('partials/_header.html.twig')}}	
		<div class="app-content flex-fill  d-flex flex-row-nowrap justify-content-center">
			<div class="content d-flex flex-row-nowrap flex-fill py-50">
				{{ include ('partials/_sidebar.html.twig') }}
				<div class="flex-fill ">
					{% block body %}{% endblock %}
				</div>
			</div>   
			
		</div>
		
        
   
    {{ include('partials/_footer.html.twig')}}
	</body>
</html>
